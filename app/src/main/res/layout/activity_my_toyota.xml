<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:scrollbars="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/news_layout_shape"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:onClick="showWarnings"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="12dp"
                        android:onClick="showWarnings"
                        android:clickable="true"
                        android:background="@drawable/attention_icon"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="showWarnings"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#f02c0a"
                            android:onClick="showWarnings"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:clickable="true"
                            android:singleLine="true"
                            android:text="İkaz Işıkları"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:onClick="showWarnings"
                            android:textColor="#0b3a73"
                            android:maxLines="5"
                            android:singleLine="false"
                            android:lines="4"
                            android:textStyle=""
                            android:clickable="true"
                            android:text="Aracınızla daha yakından ilgilenmek istiyorsanız ve onunla aynı dili konuşmak için tıklayınız !"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/news_layout_shape"
                    android:layout_marginBottom="8dp"
                    android:onClick="showAccessories"
                    android:clickable="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="12dp"
                        android:clickable="true"
                        android:onClick="showAccessories"
                        android:background="@drawable/accessories_icon"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="showAccessories"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:onClick="showAccessories"
                            android:textColor="#f02c0a"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:clickable="true"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:text="Aksesuarları Keşfet"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#0b3a73"
                            android:onClick="showAccessories"
                            android:maxLines="5"
                            android:singleLine="false"
                            android:lines="4"
                            android:textStyle=""
                            android:clickable="true"
                            android:textAlignment="center"
                            android:text="Aracınızla uyamlu orijinal aksesuarları ve Fırsat ürünlerimizi keşfetmeye hazır olun. "/>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>


