<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@drawable/admin"
                android:clickable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:maxLines="5"
                android:singleLine="false"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:clickable="true"
                android:text="Hoş Geldiniz; "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:maxLines="5"
                android:singleLine="false"
                android:lines="4"
                android:ellipsize="marquee"
                android:layout_marginBottom="8dp"
                android:textStyle=""
                android:clickable="true"
                android:text=" Bu menüden haber/kampanya ekleyebilir. Ayrıca aksesuar ve ikaz ışıkları ile ilgili güncellemelerinizi yapabilirsiniz."
                />

            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_layout_shape"
                android:onClick="jumpToNewsEditActivity"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Haber/Kampanya Düzenle"/>

            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_layout_shape"
                android:onClick="jumpToCampEditActivity"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="Aksesuar Düzenle"/>

            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_layout_shape"
                android:onClick="jumpToWarningEditActivity"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="İkaz Işıkları Düzenle"/>



        </LinearLayout>


    </ScrollView>

</LinearLayout>