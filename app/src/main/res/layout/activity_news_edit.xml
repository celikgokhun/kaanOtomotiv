<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/news_photo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:onClick="selectImage"
                android:scaleType="fitXY"
                android:background="@drawable/broken_image"
                android:clickable="true"
                />

            <EditText
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:lines="1"
                android:gravity="top"
                android:maxLines="25"
                android:singleLine="false"
                android:hint="Haber Başlığı"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/news_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:lines="8"
                android:gravity="top"
                android:maxLines="25"
                android:singleLine="false"
                android:hint="Haber Gövdesi"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/add_news_btn"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_layout_shape"
                android:onClick="postTheNews"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Haberi Yayınla"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>