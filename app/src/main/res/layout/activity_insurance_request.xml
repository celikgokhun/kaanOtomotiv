<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/insurance_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:hint="Ad"
                    android:textSize="25sp"
                    android:inputType="text"
                    android:background="@drawable/news_layout_shape"
                    />

                <EditText
                    android:id="@+id/insurance_surname_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:hint="Soyad"
                    android:textSize="25sp"
                    android:inputType="text"
                    android:background="@drawable/news_layout_shape"
                    />

                <EditText
                    android:id="@+id/insurance_tc_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:hint="TC Kimlik No"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:background="@drawable/news_layout_shape"
                    />

                <EditText
                    android:id="@+id/insurance_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:hint="Telefon"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:background="@drawable/news_layout_shape"
                    />

                <RadioButton
                    android:id="@+id/trafik_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Trafik"
                    android:clickable="true"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/kasko_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Kasko"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/saglik_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Sağlık"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/depram_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Deprem"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/hirsizlik_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Hırsızlık"
                    android:textSize="20sp"
                    />


                <Button
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="requestInsuranceFromDealer"
                    android:textStyle="bold"
                    android:textColor="#4778c4"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:text="Sigorta Talebimi Gönder!"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>